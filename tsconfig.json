{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/data/*": ["./src/data/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/main/*": ["./src/main/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/validation/*": ["./src/validation/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./build"]
}
